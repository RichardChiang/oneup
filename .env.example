# Database Configuration
DATABASE_URL=postgresql://chess_user:chess_pass@localhost:5432/chess_rl
REDIS_URL=redis://localhost:6379/0

# Model Configuration
MODEL_PATH=microsoft/DialoGPT-medium
VLLM_GPU_MEMORY_UTILIZATION=0.9
MAX_MODEL_LENGTH=2048

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
STREAMLIT_PORT=8501

# Security
SECRET_KEY=your-secret-key-here
CORS_ORIGINS=["http://localhost:8501", "http://localhost:3000"]

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Chess Engine
STOCKFISH_PATH=/usr/local/bin/stockfish
STOCKFISH_DEPTH=15
STOCKFISH_TIME_LIMIT=1.0

# Data Pipeline
LICHESS_TACTICS_URL=https://database.lichess.org/lichess_db_puzzle.csv.bz2
MIN_PUZZLE_RATING=1000
MAX_PUZZLE_RATING=2500

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Development
DEBUG=false
RELOAD=false